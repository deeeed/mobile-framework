{
  "name": "@siteed/react-native-logger",
  "version": "0.8.2",
  "description": "A simple yet powerful logging library for React Native applications, compatible with the debug package and supporting persistent log history.",
  "main": "dist/logger.js",
  "module": "dist/logger.js",
  "source": "src/logger",
  "types": "dist/logger.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "yarn build:tsc",
    "build:tsc": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "release": "yarn clean && yarn build && npm publish"
  },
  "keywords": [
    "react-native",
    "ios",
    "logging",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/deeeed/universe",
    "directory": "packages/react-native-logger"
  },
  "author": "Arthur Breton <abreton@siteed.net> (https://github.com/deeeed)",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.8",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.2.2",
    "@types/jest": "^29.5.12",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^2.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.3",
    "typescript": "^5.0.2"
  }
}
